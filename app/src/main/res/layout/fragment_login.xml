<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">


        <androidx.constraintlayout.widget.ConstraintLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:text="SANO"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_gym" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp" android:textSize="42sp"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="80dp"/>
            <Button
                    android:text="login"
                    android:layout_width="137dp"
                    android:layout_height="53dp"
                    android:id="@+id/button_login" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/input_type" app:layout_constraintStart_toStartOf="@+id/input_type"
            />
            <Button
                    android:text="register"
                    android:layout_width="137dp"
                    android:layout_height="53dp"
                    android:id="@+id/button_register" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/input_type" app:layout_constraintEnd_toEndOf="@+id/input_type"
            />
            <EditText
                    android:layout_width="324dp"
                    android:layout_height="58dp"
                    android:inputType="textPersonName"
                    android:hint="Username"
                    android:ems="10"
                    android:id="@+id/input_add_gym" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/text_gym" app:layout_constraintHorizontal_bias="0.492"/>
            <EditText
                    android:layout_width="324dp"
                    android:layout_height="58dp"
                    android:inputType="textPersonName"
                    android:hint="Password"
                    android:ems="10"
                    android:id="@+id/input_type" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/input_add_gym" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


</layout>