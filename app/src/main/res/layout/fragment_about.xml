<?xml version="1.0" encoding="utf-8"?>

<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <ImageView
                android:layout_width="250dp"
                android:layout_height="250dp" tools:src="@tools:sample/avatars"
                android:id="@+id/image_profile"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="80dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:text="Mr. Burin Samphanwetsopha"
                android:layout_width="239dp"
                android:layout_height="24dp"
                android:id="@+id/textView_name_profile"
                app:layout_constraintStart_toStartOf="@+id/image_profile"
                android:layout_marginStart="4dp" android:textSize="18sp" android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/image_profile"/>
        <TextView
                android:text="Burapha University"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_University" app:layout_constraintStart_toStartOf="@+id/textView_name_profile"
                android:textSize="18sp" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textView_name_profile"/>
        <TextView
                android:text="Information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_major" app:layout_constraintStart_toStartOf="@+id/textView_name_profile"
                android:textSize="18sp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textView_University"/>
        <TextView
                android:text="ID : 59160578"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_id_card" app:layout_constraintStart_toStartOf="@+id/textView_name_profile"
                android:textSize="18sp"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView_major"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>